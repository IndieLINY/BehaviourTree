.button-blue {
    color: rgb(255, 255, 255);
    flex-shrink: 0;
    width: 100%;
    font-size: 45px;
    background-color: rgb(72, 114, 221);
    border-top-left-radius: 30px;
    border-top-right-radius: 30px;
    border-bottom-right-radius: 30px;
    border-bottom-left-radius: 30px;
    border-top-width: 0;
    border-right-width: 0;
    border-bottom-width: 0;
    border-left-width: 0;
    height: 50%;
    transition-duration: 0.5s;
    transition-timing-function: ease-out-elastic;
}

.button-blue:hover {
    color: rgb(255, 255, 255);
    flex-shrink: 0;
    width: 100%;
    font-size: 45px;
    background-color: rgb(72, 114, 221);
    border-top-left-radius: 30px;
    border-top-right-radius: 30px;
    border-bottom-right-radius: 30px;
    border-bottom-left-radius: 30px;
    border-top-width: 0;
    border-right-width: 0;
    border-bottom-width: 0;
    border-left-width: 0;
    height: 50%;
    scale: 1.05 1.05;
    transition-duration: 0.1s;
    transition-timing-function: ease-out;
}

.button-blue:active {
    color: rgb(255, 255, 255);
    flex-shrink: 0;
    width: 100%;
    font-size: 45px;
    background-color: rgb(148, 178, 255);
    border-top-left-radius: 30px;
    border-top-right-radius: 30px;
    border-bottom-right-radius: 30px;
    border-bottom-left-radius: 30px;
    border-top-width: 0;
    border-right-width: 0;
    border-bottom-width: 0;
    border-left-width: 0;
    height: 50%;
    scale: 1.1 1.1;
    transition-duration: 0.15s;
    transition-timing-function: ease-in-circ;
    transition-property: color;
}

.text--title {
    font-size: 60px;
    margin-top: 0;
    margin-right: 0;
    margin-bottom: 0;
    margin-left: 0;
    padding-top: 30px;
    padding-right: 0;
    padding-bottom: 30px;
    padding-left: 0;
    -unity-text-align: middle-center;
    -unity-font-style: bold;
    height: 30%;
    width: 100%;
}

.text--paragraph {
    white-space: normal;
    height: 70%;
    border-top-width: 0;
    border-right-width: 0;
    border-bottom-width: 0;
    border-left-width: 0;
    border-left-color: rgb(255, 0, 0);
    border-right-color: rgb(255, 0, 0);
    border-top-color: rgb(255, 0, 0);
    border-bottom-color: rgb(255, 0, 0);
    margin-top: 0;
    margin-right: 0;
    margin-bottom: 0;
    margin-left: 0;
    padding-top: 20px;
    padding-right: 25px;
    padding-bottom: 20px;
    padding-left: 25px;
    width: 100%;
    font-size: 20px;
    text-overflow: clip;
    -unity-text-align: upper-center;
    flex-shrink: 0;
}

.bottomsheet {
    flex-grow: 1;
    position: absolute;
    width: 100%;
    height: 50%;
    bottom: 0;
    background-color: rgb(255, 255, 255);
    border-top-left-radius: 40px;
    border-top-right-radius: 40px;
    align-items: center;
    justify-content: flex-start;
    padding-top: 50px;
    border-left-color: rgba(0, 0, 0, 0);
    border-right-color: rgba(0, 0, 0, 0);
    border-top-color: rgba(0, 0, 0, 0);
    border-bottom-color: rgba(0, 0, 0, 0);
    translate: 0 100%;
    transition-duration: 1s;
}

.bottomsheet--up {
    transition-duration: 1s;
    translate: 0 0;
}

.scrim {
    flex-grow: 1;
    flex-shrink: 0;
    opacity: 0;
    background-color: rgba(0, 0, 0, 0);
    display: flex;
    transition-duration: 0.5s;
}

.scrim--fadein {
    opacity: 0.7;
    transition-duration: 0.5s;
    background-color: rgb(0, 0, 0);
}

.image--boy {
    flex-grow: 0;
    background-image: url('project://database/Assets/Dev/Res/UI/Hyperspace%20-%20Floating.png?fileID=2800000&guid=a8d81d4b80c2509458d3ab3a5444e3bc&type=3#Hyperspace - Floating');
    width: 150px;
    height: 300px;
    max-width: none;
    min-width: auto;
    transition-duration: 2s;
    transition-timing-function: ease-out-cubic;
}

.image--boy-inair {
    translate: -500px -400px;
}

.image--girl {
    flex-grow: 0;
    background-image: url('project://database/Assets/Dev/Res/UI/Hyperspace%20-%20Projector.png?fileID=2800000&guid=cfe4789f06ad692408f34d2e1fb40c9b&type=3#Hyperspace - Projector');
    flex-shrink: 0;
    width: 274px;
    height: 266px;
    transition-duration: 1s;
}

.image--girl--up {
    translate: 0 -50px;
}
